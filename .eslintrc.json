{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    // "linebreak-style": ["error", "windows"],
    "allowForLoopAfterthoughts": 0,
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "react/jsx-indent": [2, 2]
  }
}
